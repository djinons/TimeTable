<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.djinons.schoolschedule">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:fullBackupContent="true">
        <activity
            android:name="com.djinons.schoolschedule.activitys.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.djinons.schoolschedule.activitys.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.djinons.schoolschedule.activitys.EditTimeTableActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.djinons.schoolschedule.activitys.AddClassNameActivity" />
        <activity android:name="com.djinons.schoolschedule.activitys.ClassStartEndActivity" />
        <activity android:name="com.djinons.schoolschedule.activitys.HelpActivity" />
        <activity android:name="com.djinons.schoolschedule.activitys.AddNewScheduleActivity" />
        <activity android:name="com.djinons.schoolschedule.activitys.EditDeleteActivity"/>
    </application>

</manifest>